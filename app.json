{
  "expo": {
    "name": "Bark!",
    "slug": "Bark",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
     "supportsTablet": true,
      "bundleIdentifier": "com.sbpete.Bark",
      "infoPlist": {
        "NSPrivacyAccessedAPITypes": [
          {
            "API": "NSPrivacyAccessedAPICategoryDiskSpace",
            "UsageDescription": "We used this to check available storage for app functionality."
          },
          {
            "API": "NSPrivacyAccessedAPICategoryFileTimestamp",
            "UsageDescription": "We used this to synchronize data or manage cache."
          },
          {
            "API": "NSPrivacyAccessedAPICategorySystemBootTime",
            "UsageDescription": "Our reason to use this API is to monitor app performance or behavior after reboot."
          },
          {
            "API": "NSPrivacyAccessedAPICategoryUserDefaults",
            "UsageDescription": "Our reason for the use of this API is to store user preferences or settings."
          }
        ]
      }
      
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ca42120c-556a-45db-9c08-25293253bacf"
      }
    },
    "scheme": "myapp"
  }
}
